<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="280dp"
    android:background="@drawable/border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/marker_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="화장실 이름" />
        <TextView
            android:id="@+id/toiletName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="3"
            android:textSize="20dp"
            android:text="" />
        <TextView
            android:id="@+id/marker_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="화장실 유형" />
        <TextView
            android:id="@+id/toiletType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:text="" />
        <TextView
            android:id="@+id/marker_both"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="남녀공용유무" />
        <TextView
            android:id="@+id/toiletBoth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"

            android:text="" />
        <TextView
            android:id="@+id/marker_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="주소" />
        <TextView
            android:id="@+id/toilet_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:maxLines="4"
            android:text="" />

        <TextView
            android:id="@+id/marker_gender_toiletNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="성별/변기수" />

        <TextView
            android:id="@+id/toiletNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="10"
            android:textSize="20dp"

            android:text="" />

        <TextView
            android:id="@+id/marker_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="전화번호" />

        <TextView
            android:id="@+id/toiletContacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:maxLines="4"
            android:textSize="20dp"
            android:text="" />
        <TextView
            android:id="@+id/marker_openTime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="개방시간" />
        <TextView
            android:id="@+id/toiletTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="4"


            android:textSize="20dp"
            android:text="" />

        <Button
            android:id="@+id/marker_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:textSize="15dp"
            android:textStyle="bold"
            android:text="닫기" />
    </LinearLayout>
</ScrollView>
