<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="#EBECF0"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="장소로 찾기"
        android:gravity="center"
        android:fontFamily="@font/font"
        android:textSize="20dp"
        android:background="#6048D2"
        android:textColor="#FFFFFF">
    </TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        >

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="96dp"
            android:gravity="center_horizontal"
            android:hint="검색" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="37dp"
            android:fontFamily="@font/font"
            android:text="찾을 목적지를 입력해 주세요"
            android:textSize="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:background="#6048D2">
        <Button
            android:id="@+id/regional_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="확인"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textColor="#FFFFFF"
            android:layout_weight="1">


        </Button>
        <Button
            android:id="@+id/regional_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="취소"
            android:textSize="20dp"
            android:fontFamily="@font/font"
            android:textColor="#FFFFFF"
            android:layout_weight="1">

        </Button>
    </LinearLayout>

</LinearLayout>