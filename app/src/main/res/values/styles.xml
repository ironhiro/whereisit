<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#6048D2</item>
    </style>
    <style name="AppTitleTextAppearance">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="BottomNavigationTextAppearance">
        <item name="android:fontFamily">@font/font</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#6048D2</item>
        <item name="android:textSize">8dp</item>
    </style>



</resources>
